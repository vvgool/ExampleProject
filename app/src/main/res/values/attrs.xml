<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="view_border_size" format="dimension|reference"/>
    <attr name="view_border_color" format="color|reference"/>
    <declare-styleable name="CircleImageView">
        <attr name="view_border_size"/>
        <attr name="view_border_color"/>
    </declare-styleable>
    <declare-styleable name="PictureImageView">
        <attr name="view_border_color"/>
        <attr name="view_border_size"/>
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="label_background" format="color|reference"/>
        <attr name="label_text_size" format="dimension|reference"/>
        <attr name="label_text_color" format="color|reference"/>
        <attr name="label_text_padding" format="dimension|reference"/>
        <attr name="label_text" format="string|reference"/>
    </declare-styleable>
</resources>
